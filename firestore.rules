
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      // Check for the admin custom claim on the auth token.
      return request.auth.token.role == 'admin';
    }
    
    function isUserAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    /**
     * @description Allows read access to company information for all users.
     * @path /companies/{companyId}
     * @allow (get, list) - Any user can read company data.
     * @allow (create, update) - Only admins can write to company data.
     * @deny (delete) - No one can delete company data from the client.
     */
    match /companies/{companyId} {
      allow get, list: if request.auth != null;
      allow create, update: if isUserAdmin(request.auth.uid);
      allow delete: if false; // Protect against accidental deletion
    }

    /**
     * @description Rules for employee data within a company.
     * @path /companies/{companyId}/employees/{employeeId}
     * @allow (get, list) - Any authenticated user can read employee data.
     * @allow (create) - Any authenticated user can create employee data (for quick activation).
     * @allow (update) - Only admins can update employee data.
     * @allow (delete) - Only admins can delete employee data.
     */
    match /companies/{companyId}/employees/{employeeId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.companyId == companyId;
      allow update, delete: if isUserAdmin(request.auth.uid);
    }

    /**
     * @description Rules for consumption data within a company.
     * @path /companies/{companyId}/consumptions/{consumptionId}
     * @allow (create) - Any authenticated user can create consumption data.
     * @allow (get, list) - Any user can read consumption data.
     * @allow (update, delete) - Only admins can void (update) or delete records.
     */
    match /companies/{companyId}/consumptions/{consumptionId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.companyId == companyId;
      allow update, delete: if isUserAdmin(request.auth.uid);
    }

    /**
     * @description Rules for menu items for a specific company's kiosk.
     * @path /companies/{companyId}/menuItems/{menuItemId}
     * @allow (get, list) - Any authenticated user can read menu items.
     * @allow (create, update, delete) - Only admins can manage menu items.
     */
    match /companies/{companyId}/menuItems/{menuItemId} {
        allow get, list: if request.auth != null;
        allow create, update, delete: if isUserAdmin(request.auth.uid) && request.resource.data.companyId == companyId;
    }

    /**
     * @description Rules for user profile documents.
     * @path /users/{userId}
     * @allow (read) - Any authenticated user can read any user's profile.
     * @allow (create) - A user can only create their own profile.
     * @allow (update) - A user can update their own profile, or an admin can update any profile.
     * @deny (delete) - No user can delete a profile.
     */
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow create only if the incoming data has the role 'user'. Admins are set via backend.
      allow create: if isOwner(userId) && request.resource.data.role == 'user';
      allow update: if isOwner(userId) || isUserAdmin(request.auth.uid);
      allow delete: if false;
    }

    /**
     * @description Rules for the application configuration document.
     * @path /configuration/app
     * @allow (get) - The app configuration is public for domain validation.
     * @allow (list, write) - Admins can manage the configuration.
     */
    match /configuration/app {
      allow get: if true;
      allow list, create, update, delete: if isUserAdmin(request.auth.uid);
    }

    /**
     * @description Collection group rule required for cross-company queries in admin dashboard.
     * @path collectionGroup consumptions
     * @allow (list) - Only admins can run collection group queries across all companies.
     */
    match /{path=**}/consumptions/{consumptionId} {
      allow list: if request.auth != null && isAdmin();
    }
  }
}
